<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: 'Message from the creator', sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: 'Message from the creator', sticky: false) %>
<% else flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: 'Message from the creator', sticky: false) %>
<% end %>