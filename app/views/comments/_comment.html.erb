<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-1">
        <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-11">
          <div>
            <%= comment.content %>
          </div>
          <div class="comment-attribution">
            <hr>
            <em>Comment posted by <span class="comment-name"><%= comment.user.first_name %></span>,
            <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</em>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>