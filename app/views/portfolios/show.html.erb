<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main').to_s, width: '100%' %>
      <hr>
      <%= link_to  "View All Portfolio Items", portfolios_path, class: "btn btn-primary" %>
      <% if logged_in?(:site_admin) %>
        <%= link_to  "Edit", edit_portfolio_path(@portfolio_item), class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>
      <h3>Technologies Used</h3>
      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
      <hr>
      <h3>Links to the Outside</h3>
      <div class="btn-group link-btns">
        <%= link_to  fa_icon("code", text: "View Projects"), @portfolio_item.url, target: "_blank", class: "btn btn-sm btn-dark" %>
        <%= link_to  fa_icon("github", text: "Github"), @portfolio_item.github, target: "_blank", class: "btn btn-sm btn-dark" %>
      </div>
    </div>
  </div>
</div>