<%= form_for(@portfolio_item) do |f| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control"%>
      </div>
      <div class="form-group">
        <label class="btn btn-primary btn-block">
          Upload a main image file <%= f.file_field :main_image, style: "display:none;" %>
        </label>
      </div>
      <div class="form-group">
        <label class="btn btn-primary btn-block">
          Upload a thumb image file <%= f.file_field :thumb_img, style: "display:none;" %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: 10 %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <hr>
      <h3>Technologies Used: </h3>
      <div>
        <%= link_to_add_association 'Add technology', f, :technologies %>
      </div>
      <div>
        <%= f.fields_for :technologies do |technology_form| %>
          <%= render  'technology_fields', f: technology_form %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit "Save Item", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>