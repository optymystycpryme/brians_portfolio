<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_img(portfolio_item.thumb_img, 'thumb').to_s, width: '100%', height: '200px' %>
    <div class="card-body">
      <h5><span class="card-text card-title-portfolio">
        <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
      </span></h5>
      <h6><%= portfolio_item.subtitle %></h6>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group link-btns">
          <%= link_to  fa_icon("code", text: "View Projects"), portfolio_item.url, target: "_blank", class: "btn btn-sm btn-dark" %>
          <%= link_to  fa_icon("github", text: "Github"), portfolio_item.github, target: "_blank", class: "btn btn-sm btn-dark" %>
        </div>
      </div>
    </div>
  </div>
</div>
