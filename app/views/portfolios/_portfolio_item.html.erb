<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_img unless portfolio_item.thumb_img.nil? %>
    <div class="card-body">
      <span class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
      <%= portfolio_item.subtitle %>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><a href="https://github.com/optymystycpryme"><%= fa_icon "github" %>Github</a></button>
          <button type="button" class="btn btn-sm btn-outline-secondary">View Project</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
