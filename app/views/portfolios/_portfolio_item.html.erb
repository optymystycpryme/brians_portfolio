<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_img(portfolio_item.thumb_img, 'thumb').to_s, width: '100%' %>
    <div class="card-body">
      <span class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
      <%= portfolio_item.subtitle %>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to  fa_icon("code", text: "View Projects"), portfolio_item.url, class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to  fa_icon("github", text: "Github"), portfolio_item.github, class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
